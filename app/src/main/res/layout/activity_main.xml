<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSecondary"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/currentLayout"
         android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="vertical"

        android:paddingHorizontal="50dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/searchLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RelativeLayout
            android:id="@+id/profilePicGlow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:padding="5dp"
            android:layout_gravity="center"

            android:background="@drawable/purple_round_glow">

            <androidx.cardview.widget.CardView
                android:id="@+id/view2"
                android:layout_width="150dp"
                android:layout_height="150dp"
                app:cardBackgroundColor="?attr/colorSecondaryVariant"
                app:cardCornerRadius="150dp"
                android:layout_gravity="center">

                    <ImageView
                        android:layout_height="150dp"
                        android:layout_width="match_parent"
                        android:id="@+id/setProfilePic"
                        android:background="@drawable/frown_straight"
                        android:scaleType="centerCrop"/>

            </androidx.cardview.widget.CardView>
        </RelativeLayout>

        <TextView
            android:id="@+id/SetAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:layout_marginTop="15dp"
            android:fontFamily="@font/roboto"

            android:text="No Account Set"
            android:textAlignment="center"
            android:textColor="?attr/colorPrimary"
            android:textSize="22dp" />

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progressBar"
        android:indeterminateDrawable="@drawable/progress"
        android:layout_width="75dp"
        android:layout_height="75dp"

        android:layout_gravity="center"
        android:visibility="gone"

        app:layout_constraintTop_toBottomOf="@id/currentLayout"
        app:layout_constraintBottom_toTopOf="@id/searchLayout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <LinearLayout
        android:id="@+id/searchLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".Main_Frag_Holder"

        android:orientation="vertical"
        android:layout_marginTop="20dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <SearchView
            android:id="@+id/searchBar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/search_purple"

            android:queryHint="Set New Account"

            android:paddingStart="10dp"
            android:layout_marginHorizontal="20dp"

            android:inputType="textCapSentences"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_margin="20dp"

        android:background="@drawable/round"

        app:layout_constraintTop_toBottomOf="@id/searchLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"

            android:orientation="vertical">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"

                android:layout_gravity="center"

                android:backgroundTint="@color/grey"
                android:background="@drawable/ic_baseline_people_outline_24"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center"

                android:text="No Accounts Recorded"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/grey"
                android:textSize="20sp"/>

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@id/searchLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        android:layout_margin="22dp">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/accountNameList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            tools:listitem="@layout/account_list_item"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>