<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    android:clickable="true"
    android:focusableInTouchMode="true"
    tools:context=".Activities.MainActivity">

    <!--SuggestionsBtn-->
    <RelativeLayout
        android:id="@+id/suggestionBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02">

        <ImageView
            android:id="@+id/suggestionIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_baseline_emoji_objects_24"
            android:contentDescription="@string/suggestions_icon" />
    </RelativeLayout>

    <!--SettingsBtn-->
    <RelativeLayout
        android:id="@+id/settingsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.95"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.02">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_baseline_settings_24"
            android:contentDescription="@string/settings_icon" />
    </RelativeLayout>

    <!--DisableBtn-->
    <RelativeLayout
        android:id="@+id/disabledBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="25dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/setNameContainer"
        app:layout_constraintEnd_toEndOf="@+id/settingsBtn"
        app:layout_constraintTop_toTopOf="@+id/setNameContainer">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_baseline_update_disabled_24"
            android:backgroundTint="@color/orange"
            android:contentDescription="@string/state_disabled_icon" />
    </RelativeLayout>

    <!--Profile Pic-->
    <RelativeLayout
        android:id="@+id/profilePicGlow"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/purple_round_glow"
        android:padding="3dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent=".15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent=".3">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorPrimaryVariant"
            app:cardCornerRadius="360dp">

            <ImageView
                android:id="@+id/setProfilePic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/frown_straight"
                android:contentDescription="@string/profile_picture"
                android:scaleType="centerCrop" />

        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <!--Account Name-->
    <RelativeLayout
        android:id="@+id/setNameContainer"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/profilePicGlow">

        <TextView
            android:id="@+id/SetAccountName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_medium_italic"
            android:text="@string/no_account_set"
            android:textAlignment="center"
            android:textColor="?attr/colorSecondary"
            android:textSize="22sp" />
    </RelativeLayout>

    <!--Search-->
    <RelativeLayout
        android:id="@+id/searchLayout"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:clickable="false"
        app:layout_constraintBottom_toTopOf="@+id/suggestionsLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/setNameContainer"
        app:layout_constraintWidth_percent=".9">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchBar"
            style="@style/SearchViewStyle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/search_bar"
            android:inputType="text"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            app:queryHint=" Set New Account" />
    </RelativeLayout>

    <!--Network message-->
    <RelativeLayout
        android:id="@+id/networkMsg"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="@drawable/search_bar"
        android:backgroundTint="?attr/colorOnPrimary"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/searchLayout"
        app:layout_constraintEnd_toEndOf="@+id/searchLayout"
        app:layout_constraintStart_toStartOf="@+id/searchLayout"
        app:layout_constraintTop_toTopOf="@+id/searchLayout"
        app:layout_constraintWidth_percent=".9">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/roboto_bold"
            android:text="@string/network_msg"
            android:textColor="?attr/colorPrimary"
            android:textSize="15sp" />
    </RelativeLayout>

    <!--Suggestions-->
    <LinearLayout
        android:id="@+id/suggestionsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/accountNameContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchLayout"
        app:layout_constraintWidth_percent=".9">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/suggestionAccountList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:itemCount="5"
            tools:listitem="@layout/suggestion_account_list_item" />
    </LinearLayout>

    <!--Previous-->
    <RelativeLayout
        android:id="@+id/accountNameContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginVertical="20dp"
        android:background="@drawable/rounded_rectangle"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/suggestionsLayout"
        app:layout_constraintWidth_percent=".9">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical">

            <View
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/ic_baseline_people_outline_24"
                android:backgroundTint="@color/grey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/roboto_light"
                android:text="@string/empty_recent_searches"
                android:textColor="@color/grey"
                android:textSize="20sp" />
        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/accountNameList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            tools:itemCount="6"
            tools:listitem="@layout/account_list_item" />
    </RelativeLayout>

    <!--loading-->
    <include
        android:id="@+id/loadingView"
        layout="@layout/loading"
        android:visibility="invisible" />

</androidx.constraintlayout.widget.ConstraintLayout>