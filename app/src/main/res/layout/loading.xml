<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:weightSum="2"

        android:padding="15dp"

        android:background="@drawable/loading_grey"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <com.iitr.kaishu.nsidedprogressbar.NSidedProgressBar
            android:id="@+id/NSidedProgressBar"
            android:layout_width="40dp"
            android:layout_height="50dp"

            android:layout_gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"

            app:nsidedProg_primaryColor="@color/grey"
            app:nsidedProg_secondaryColor="?attr/colorSecondary"

            app:nsidedProg_baseSpeed="5"
            app:nsidedProg_clockwise="true"
            app:nsidedProg_sideCount="360" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_weight="1"
            android:layout_gravity="center"
            android:layout_marginStart="10dp"

            android:text="Loading..."
            android:textColor="@color/white"
            android:textSize="15sp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>