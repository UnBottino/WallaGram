<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".Activities.MultiImageActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_baseline_arrow_back_24"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:title="Multi-Image Posts" />

    <TextView
        android:id="@+id/multiInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:text="@string/multi_image_post_info_msg"
        android:textAlignment="center"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@id/btnContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintWidth_percent=".85" />

    <LinearLayout
        android:id="@+id/btnContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/applyBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/multiInfo"
        app:layout_constraintWidth_percent=".8">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckedTextView
                android:id="@+id/btn1"
                style="@style/checkedNumber"
                android:text="1"
                tools:ignore="HardcodedText" />

            <CheckedTextView
                android:id="@+id/btn3"
                style="@style/checkedNumber"
                android:text="3"
                tools:ignore="HardcodedText" />

            <CheckedTextView
                android:id="@+id/btn5"
                style="@style/checkedNumber"
                android:text="5"
                tools:ignore="HardcodedText" />

            <CheckedTextView
                android:id="@+id/btn7"
                style="@style/checkedNumber"
                android:text="7"
                tools:ignore="HardcodedText" />

            <CheckedTextView
                android:id="@+id/btn9"
                style="@style/checkedNumber"
                android:text="9"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckedTextView
                android:id="@+id/btn2"
                style="@style/checkedNumber"
                android:text="2"
                tools:ignore="HardcodedText" />

            <CheckedTextView
                android:id="@+id/btn4"
                style="@style/checkedNumber"
                android:text="4"
                tools:ignore="HardcodedText" />

            <CheckedTextView
                android:id="@+id/btn6"
                style="@style/checkedNumber"
                android:text="6"
                tools:ignore="HardcodedText" />

            <CheckedTextView
                android:id="@+id/btn8"
                style="@style/checkedNumber"
                android:text="8"
                tools:ignore="HardcodedText" />

            <CheckedTextView
                android:id="@+id/btn10"
                style="@style/checkedNumber"
                android:text="10"
                tools:ignore="HardcodedText" />
        </LinearLayout>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/applyBtn"
        style="@style/ApplyButton"
        android:enabled="false"

        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent=".9" />

</androidx.constraintlayout.widget.ConstraintLayout>