<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?attr/colorPrimary"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn1"
            style="@style/NumpadBtn"
            android:text="1"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btn4"
            style="@style/NumpadBtn"
            android:text="4"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btn7"
            style="@style/NumpadBtn"
            android:text="7"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn2"
            style="@style/NumpadBtn"
            android:text="2"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btn5"
            style="@style/NumpadBtn"
            android:text="5"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btn8"
            style="@style/NumpadBtn"
            android:text="8"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btn0"
            style="@style/NumpadBtn"
            android:text="0"
            tools:ignore="HardcodedText" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn3"
            style="@style/NumpadBtn"
            android:text="3"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btn6"
            style="@style/NumpadBtn"
            android:text="6"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btn9"
            style="@style/NumpadBtn"
            android:text="9"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/btnClear"
            style="@style/NumpadBtn"
            android:layout_margin="0dp"
            android:padding="18dp"
            android:text="@string/numpad_clear" />
    </LinearLayout>
</LinearLayout>