<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".DurationActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        tools:ignore="MissingConstraints"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="50dp"
        android:layout_marginBottom="20dp"

        android:text="@string/durationInfo"
        android:textColor="?attr/colorOnPrimary"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textAlignment="center"

        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toTopOf="@id/numpad"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:id="@+id/numpad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="vertical"

        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"

            android:layout_marginBottom="40dp"

            app:layout_constraintTop_toBottomOf="@id/info"
            app:layout_constraintBottom_toTopOf="@+id/numpad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/bigNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/rounded_rectangle"
                android:fontFamily="@font/roboto"

                android:gravity="center"
                android:text="1"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="70sp"
                android:maxLength="3"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"

                app:layout_constraintTop_toBottomOf="@id/info"
                app:layout_constraintBottom_toTopOf="@+id/numpad"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <TextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/button"

                    android:text="Days"
                    android:fontFamily="@font/roboto"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20sp"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/hours"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/hours"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:paddingVertical="5dp"
                    android:paddingHorizontal="20dp"
                    android:background="@drawable/button"
                    android:backgroundTint="@color/pitch_black"

                    android:text="Hours"
                    android:fontFamily="@font/roboto"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20sp"

                    app:layout_constraintStart_toEndOf="@id/days"
                    app:layout_constraintEnd_toEndOf="parent"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_margin="0dp"

                    android:paddingHorizontal="40dp"
                    android:paddingVertical="20dp"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"

                    android:text="1"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto"/>

                <TextView
                    android:id="@+id/btn4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"
                    android:paddingHorizontal="40dp"

                    android:paddingVertical="20dp"
                    android:text="4"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/btn7"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"

                    android:paddingHorizontal="40dp"
                    android:paddingVertical="20dp"
                    android:layout_margin="0dp"

                    android:text="7"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn2"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/roboto"

                    android:paddingHorizontal="40dp"
                    android:paddingVertical="20dp"
                    android:layout_margin="0dp"

                    android:text="2"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/btn5"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"

                    android:paddingHorizontal="40dp"
                    android:paddingVertical="20dp"
                    android:text="5"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/btn8"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"

                    android:paddingHorizontal="40dp"
                    android:paddingVertical="20dp"
                    android:layout_margin="0dp"

                    android:text="8"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/btn0"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"

                    android:paddingHorizontal="40dp"
                    android:paddingVertical="20dp"
                    android:text="0"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/btn3"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"

                    android:paddingHorizontal="40dp"
                    android:paddingVertical="20dp"
                    android:layout_margin="0dp"

                    android:text="3"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/btn6"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"

                    android:paddingHorizontal="40dp"
                    android:paddingVertical="20dp"
                    android:text="6"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/btn9"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto"

                    android:paddingHorizontal="40dp"
                    android:paddingVertical="20dp"
                    android:layout_margin="0dp"

                    android:text="9"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/btnClear"
                    android:layout_width="wrap_content"

                    android:layout_height="wrap_content"
                    android:layout_marginVertical="15dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_thin"

                    android:paddingHorizontal="20dp"
                    android:paddingVertical="20dp"
                    android:text="CLEAR"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="18dp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/applyBtn"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"

        android:background="@drawable/button"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_centerInParent="true"

            android:text="Apply"
            android:textSize="18sp"
            android:fontFamily="@font/roboto"
            android:textColor="?attr/colorOnPrimary" />
    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>