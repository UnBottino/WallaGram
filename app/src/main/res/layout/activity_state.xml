<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimary"
    tools:context=".StateActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        tools:ignore="MissingConstraints"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:elevation="4dp"/>

    <RelativeLayout
        android:id="@+id/offBtn"
        android:layout_width="125dp"
        android:layout_height="125dp"

        android:visibility="invisible"

        android:background="@drawable/round_power_off"
        android:layout_marginBottom="250dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp"
            android:src="@drawable/power_dull"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/offText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:visibility="invisible"

        android:layout_marginHorizontal="50dp"
        android:text="Activate to update your background as new IG pictures are posted"
        android:textColor="?attr/colorOnSecondary"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="80dp"

        app:layout_constraintTop_toBottomOf="@id/offBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <RelativeLayout
        android:id="@+id/onBtn"
        android:layout_width="125dp"
        android:layout_height="125dp"

        android:background="@drawable/round_power_on"
        android:layout_marginBottom="250dp"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" >

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:paddingBottom="5dp"
            android:src="@drawable/power_green"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/onText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="50dp"
        android:text="Your background will be update as new IG pictures are posted"
        android:textColor="?attr/colorOnPrimary"
        android:fontFamily="@font/roboto"
        android:textSize="18sp"
        android:textAlignment="center"
        android:layout_marginTop="80dp"

        app:layout_constraintTop_toBottomOf="@id/onBtn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>